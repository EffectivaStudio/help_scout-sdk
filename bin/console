#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'dotenv/load'
require 'awesome_print'
require 'helpscout'

Helpscout.configure do |config|
  config.api_key = ENV.fetch('HELPSCOUT_API_KEY')
  config.default_mailbox = ENV.fetch('HELPSCOUT_DEFAULT_MAILBOX')
end

begin
  require 'pry'
  Pry.start
rescue LoadError
  require 'irb'
  IRB.start(__FILE__)
end
