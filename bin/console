#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'dotenv/load'
require 'awesome_print'
require 'helpscout'

Helpscout.configure do |config|
  config.app_id = ENV.fetch('HELPSCOUT_APP_ID')
  config.app_secret = ENV.fetch('HELPSCOUT_APP_SECRET')
  config.default_mailbox = ENV.fetch('HELPSCOUT_DEFAULT_MAILBOX')
  config.access_token = ENV.fetch('HELPSCOUT_ACCESS_TOKEN', nil)
end

begin
  require 'pry'
  Pry.start
rescue LoadError
  require 'irb'
  IRB.start(__FILE__)
end
